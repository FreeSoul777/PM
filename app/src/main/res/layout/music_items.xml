<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_and_gray"
    android:foreground="?attr/selectableItemBackground"
    android:layout_margin="2dp"
    android:id="@+id/audio_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/red"
        android:layout_below="@+id/music_img"
        android:layout_toEndOf="@+id/music_img"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/music_img"
        android:src="@drawable/cover_art_2"
        android:padding="5dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/music_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Name"
        android:singleLine="true"
        android:layout_toEndOf="@+id/music_img"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/menuMore"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/music_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist Name"
        android:singleLine="true"
        android:layout_toEndOf="@+id/music_img"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/music_file_name"
        android:layout_marginTop="2dp"
        android:layout_toStartOf="@+id/menuMore"
        android:textColor="#AAAAAA"
        android:textSize="11dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/menuMore"
        android:src="@drawable/ic_more"
        android:padding="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"/>


</RelativeLayout>