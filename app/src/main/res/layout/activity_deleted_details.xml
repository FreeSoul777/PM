<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_and_gray"
    tools:context=".GarbageDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line"
        android:layout_alignParentBottom="true"
        android:background="@color/black_and_gray">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_queue"
            android:id="@+id/queue"
            android:layout_marginBottom="7dp"
            android:backgroundTint="@color/black_and_gray"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_outline"
            android:id="@+id/delete"
            android:layout_marginBottom="7dp"
            android:backgroundTint="@color/black_and_gray"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_playlist"
            android:id="@+id/add_playlist"
            android:layout_marginBottom="7dp"
            android:backgroundTint="@color/black_and_gray"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more"
            android:id="@+id/more"
            android:layout_marginBottom="7dp"
            android:backgroundTint="@color/black_and_gray"
            android:layout_weight="1"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_and_gray"
        android:layout_alignParentTop="true"
        android:id="@+id/title">
        <TextView
            android:id="@+id/count_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбрано: "
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/choice_all"
            android:layout_toEndOf="@+id/back"
            android:textColor="@color/white"
            android:textSize="22sp"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/choice_all"
            android:src="@drawable/ic_unchecked"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="15dp"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/back"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:padding="15dp"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView"
        android:layout_below="@+id/title"
        android:layout_above="@+id/line"
        android:background="@color/ground_dialog"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:nestedScrollingEnabled="false"/>

</RelativeLayout>